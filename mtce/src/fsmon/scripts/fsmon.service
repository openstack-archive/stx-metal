[Unit]
Description=Titanium Cloud Maintenance Filesystem Monitor
After=network.target syslog.service config.service
Before=pmon.service

[Service]
Type=forking
ExecStart=/etc/rc.d/init.d/fsmon start
ExecStop=/etc/rc.d/init.d/fsmon stop
ExecReload=/etc/rc.d/init.d/fsmon reload
PIDFile=/var/run/fsmond.pid

# Failure handling
TimeoutStartSec=10s
TimeoutStopSec=10s

# restarted by pmon
Restart=no
RestartSec=5

[Install]
WantedBy=multi-user.target

